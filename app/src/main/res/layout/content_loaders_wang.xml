<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_loaders_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/views_margin_bottom"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wang_avloadingindicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://github.com/81813780/AVLoadingIndicatorView"
            android:textSize="12sp"
            android:autoLink="web"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/views_margin_bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallPulseIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallGridPulseIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallClipRotateIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallClipRotatePulseIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/views_margin_bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="SquareSpinIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallClipRotateMultipleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallPulseRiseIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallRotateIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/views_margin_bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="CubeTransitionIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallZigZagIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallZigZagDeflectIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallTrianglePathIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/views_margin_bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallScaleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="LineScaleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="LineScalePartyIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallScaleMultipleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/views_margin_bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallPulseSyncIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallBeatIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="LineScalePulseOutIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="LineScalePulseOutRapidIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/views_margin_bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallScaleRippleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallScaleRippleMultipleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallSpinFadeLoaderIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="LineSpinFadeLoaderIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/views_margin_bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="TriangleSkewSpinIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="PacmanIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="BallGridBeatIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

            <com.wang.avi.AVLoadingIndicatorView
                app:indicatorColor="@color/colorAccent"
                app:indicatorName="SemiCircleSpinIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/loaders_margin" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>